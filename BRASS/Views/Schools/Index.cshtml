@model IEnumerable<BRASS.Models.School>

@{
    ViewData["Title"] = "Index";
}

<h2>School Info</h2>

<div class="row col-lg-12" style="margin-top:1%">
    <div class="col-lg-12">
        <div class="col-lg-12">
            <div class="col-lg-12" style="overflow-y:auto;overflow-x:visible;max-height:70vh">
                <table class="table table-hover">
                    <thead>
                        <tr class="table-primary">
                            <th>@Html.DisplayName("School Name")</th>
                            <th>@Html.DisplayName("Available Buses")</th>
                            <th>@Html.DisplayName("Bus Arrival Time")</th>
                            <th>@Html.DisplayName("Bus Departure Time")</th>
                            <th>@Html.DisplayName("Route Group")</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.SchoolName)</td>
                                <td>@Html.DisplayFor(modelItem => item.NumbBuses)</td>
                                <td>@Html.DisplayFor(modelItem => item.ArrivalTime)</td>
                                <td>@Html.DisplayFor(modelItem => item.DepartureTime)</td>
                                <td>@Html.DisplayFor(modelItem => item.RouteGroup)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.SchoolId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.SchoolId">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.SchoolId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <p>
            <button type="button" class="btn btn-outline-dark" onclick="location.href='@Url.Action("Create", "School")'"> Create New </button>
        </p>
    </div>
</div>
<style>
    .container {
        max-width: 100vw
    }

    table {
        vertical-align: middle;
        text-align: center
    }

    th {
        padding: 2rem 0.5rem !important;
        white-space: nowrap !important;
    }

    #AddBus #UpdateBus {
        margin: 0% 10%
    }
</style>

